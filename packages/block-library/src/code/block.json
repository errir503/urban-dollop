{
	"apiVersion": 2,
	"name": "core/code",
	"title": "Code",
	"category": "text",
	"description": "Display code snippets that respect your spacing and tabs.",
	"textdomain": "default",
	"attributes": {
		"content": {
			"type": "string",
			"source": "html",
			"selector": "code"
		}
	},
	"supports": {
		"anchor": true,
		"__experimentalSelector": ".wp-block-code > code",
		"typography": {
			"fontSize": true
		},
		"spacing": {
			"margin": [ "top", "bottom" ],
			"padding": true
		},
		"__experimentalBorder": {
			"radius": true,
			"color": true,
			"width": true,
			"style": true
		},
		"color": {
			"text": true,
			"background": true,
			"gradients": true
		}
	},
	"style": "wp-block-code"
}
